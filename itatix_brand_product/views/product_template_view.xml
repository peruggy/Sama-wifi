<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_product_form_sama" model="ir.ui.view">
            <field name="name">product.template.product.form.sama</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='unspsc_code_id']" position="after">
                    <field name="sama_brand" string="Brand"/>
                    <field name="sama_category"/>
                    <field name="sama_subcategory"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>