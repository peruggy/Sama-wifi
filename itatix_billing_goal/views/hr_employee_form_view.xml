<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_employee_form_billing_goal" model="ir.ui.view">
            <field name="name">hr.employee.form.billing_goal</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="billing_goal" attrs="{'invisible': [('billing_goal','>=', 0)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>