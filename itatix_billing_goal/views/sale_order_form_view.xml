<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_tree_view_billing_goal" model="ir.ui.view">
            <field name="name">sale.order.tree.view.billing_goal</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="invoiced_target" attrs="{'invisible': [('invoiced_target','>=', 0)]}"/>
                    <field name="billing_goal" attrs="{'invisible': [('billing_goal','>=', 0)]}"/>
                </xpath>
            </field>
        </record>
        <record id="sale_view_quotation_tree_with_billing_goal" model="ir.ui.view">
            <field name="name">sale.order.tree.quotation.billing_goal</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="invoiced_target" attrs="{'invisible': [('invoiced_target','>=', 0)]}"/>
                    <field name="billing_goal" attrs="{'invisible': [('billing_goal','>=', 0)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>