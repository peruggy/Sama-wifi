            <strong>VENDOR</strong>
        </xpath>
        <xpath expr="/t/t/div/div[1]" position="after">
            <div class="row address">
                <strong>BILL TO</strong>
                <div class="col-5">
                    <div t-field="o.partner_invoice_id" t-options-widget="'contact'"/>
                </div>
                <div class="col-5 offset-2"/>
            </div>
        </xpath>
    </template>
</odoo>
